{
  "name": "clir_publications",
  "version": "2.0.0",
  "description": "Front end skin for CLIR Publications",
  "private": "true",
  "engines": {
    "node": ">=23"
  },
  "scripts": {
    "clean": "rm -rf dist src/_data/zenodo.json src/_data/podcast.json src/_data/youtube.json dist/assets/search-index.json dist/assets/redirects.map",
    "fetch": "pnpm run fetch:zenodo && pnpm run fetch:podcast && pnpm run fetch:youtube",
    "index": "node scripts/build-search-index.mjs",
    "redirects:map": "node scripts/build-apache-redirect-map.mjs",
    "smoke": "node scripts/smoke.mjs",
    "css:build": "postcss src/assets/styles.css -o dist/assets/styles.css",
    "css:watch": "postcss src/assets/styles.css -o dist/assets/styles.css -w",
    "build:11ty": "eleventy",
    "dev:11ty": "eleventy --serve --watch",
    "build": "pnpm css:build && pnpm index && pnpm build:11ty",
    "dev": "pnpm index && pnpm css:watch & pnpm dev:11ty",
    "fetch:zenodo": "node --env-file=.env scripts/fetch-zenodo.mjs",
    "fetch:podcast": "node scripts/fetch-podcast.mjs",
    "fetch:youtube": "node scripts/fetch-youtube.mjs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.30.0",
  "dependencies": {
    "minisearch": "^7.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@11ty/eleventy": "^3.1.2",
    "@11ty/eleventy-img": "^6.0.4",
    "@tailwindcss/postcss": "^4.2.0",
    "autoprefixer": "^10.4.24",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "tailwindcss": "^4.2.0"
  }
}
