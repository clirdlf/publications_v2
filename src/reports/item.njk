---
pagination:
  data: zenodo
  size: 1
  alias: item
permalink: "/reports/zenodo-{{ item.zenodo_id }}/index.html"
layout: layouts/publication-item-page.njk
eleventyComputed:
  title: "{{ item.title }} - A CLIR Publication"
---

{% set primaryThumbnail = item.links and item.links.thumbnails and (item.links.thumbnails["750"] or item.links.thumbnails["250"] or item.links.thumbnails["100"]) %}
{% set citationSource = {
  title: item.title,
  published: item.published,
  creators: item.creators,
  creator_details: item.creator_details,
  doi: item.doi,
  url: item.zenodo_html or (item.doi and ("https://doi.org/" + item.doi)),
  publisher: "Council on Library and Information Resources"
} %}

<article class="item-view lp-container">
  <p class="item-breadcrumb"><a href="{{ '/reports/' | url }}">Reports</a> / {{ item.title }}</p>

  <section class="item-hero">
    <div class="item-cover">
      {% if primaryThumbnail %}
        {% image primaryThumbnail, "Cover image for " + item.title, "(max-width: 760px) 90vw, 300px", [300, 600, 900], "item-cover-image" %}
      {% else %}
        <div class="item-cover-fallback" aria-hidden="true">CLIR</div>
      {% endif %}
    </div>

    <div class="item-summary">
      <p class="item-kicker">Publication</p>
      <h1>{{ item.title }}</h1>

      <dl class="item-meta">
        {% if item.published %}
          <div>
            <dt>Published</dt>
            <dd>{{ item.published | isoDate }}</dd>
          </div>
        {% endif %}
        {% if item.creators and item.creators.length %}
          <div>
            <dt>Creators</dt>
            <dd>{{ item.creators | join(", ") }}</dd>
          </div>
        {% endif %}
        {% if item.doi %}
          <div>
            <dt>DOI</dt>
            <dd><a class="underline" target="_blank" rel="noopener noreferrer" href="https://doi.org/{{ item.doi }}">{{ item.doi }}</a></dd>
          </div>
        {% endif %}
        <div class="item-citation" data-citation-root>
          <dt>Citation</dt>
          <dd>
            <div class="item-citation-controls">
              <label for="citation-style-{{ item.zenodo_id }}">Format</label>
              <select id="citation-style-{{ item.zenodo_id }}" data-citation-style>
                <option value="chicago" selected>Chicago</option>
                <option value="mla">MLA</option>
                <option value="harvard">Harvard</option>
                <option value="vancouver">Vancouver</option>
              </select>
            </div>
            <div class="item-citation-output-row">
              <p class="item-citation-output" data-citation-output>Loading citation...</p>
              <button
                type="button"
                class="item-citation-copy"
                data-citation-copy
                aria-label="Copy citation"
                title="Copy citation"
              >
                <svg class="item-citation-copy-icon item-citation-copy-icon-default" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d="M16 1H6C4.9 1 4 1.9 4 3V15H6V3H16V1ZM19 5H10C8.9 5 8 5.9 8 7V21C8 22.1 8.9 23 10 23H19C20.1 23 21 22.1 21 21V7C21 5.9 20.1 5 19 5ZM19 21H10V7H19V21Z" fill="currentColor"/>
                </svg>
                <svg class="item-citation-copy-icon item-citation-copy-icon-success" viewBox="0 0 24 24" aria-hidden="true" focusable="false">
                  <path d="M9 16.2L4.8 12 3.4 13.4 9 19 21 7 19.6 5.6 9 16.2Z" fill="currentColor"/>
                </svg>
                <span class="sr-only">Copy citation</span>
              </button>
            </div>
            <p class="item-citation-status" data-citation-status aria-live="polite"></p>
            <script type="application/json" data-citation-source>{{ citationSource | json | safe }}</script>
          </dd>
        </div>
      </dl>

      <div class="item-actions">
        {% if item.files and item.files.length %}
          <a class="lp-btn" href="{{ item.files[0].url }}">Download</a>
        {% endif %}
        {% if item.zenodo_html %}
          <a class="lp-btn lp-btn-outline item-btn-alt" href="{{ item.zenodo_html }}">View on Zenodo</a>
        {% endif %}
      </div>
    </div>
  </section>

  {% if item.description %}
    <section class="item-panel">
      <h2>About</h2>
      <div class="item-description">{{ item.description | safe }}</div>
    </section>
  {% endif %}

  <section class="item-panel">
    <h2>Files</h2>
    {% if item.files and item.files.length %}
      <ul class="item-files">
        {% for f in item.files %}
          <li>
            <a href="{{ f.url }}">{{ f.key }}</a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p class="item-empty">No files attached.</p>
    {% endif %}
  </section>
</article>
<script type="module" src="{{ '/assets/js/report-citation.js' | url }}"></script>
